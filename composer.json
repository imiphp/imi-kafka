{
    "name": "imiphp/imi-kafka",
    "type": "library",
    "license": "MIT",
    "description": "支持在 imi 框架中使用 Kafka 客户端",
    "require": {
        "imiphp/imi-queue": "^1.2.0",
        "longlang/phpkafka": "^1.1"
    },
    "require-dev": {
        "yurunsoft/imi": "dev-dev",
        "yurunsoft/yurun-http": "^4.0.0",
        "yurunsoft/ide-helper": "~1.0",
        "swoole/ide-helper": "^4.6",
        "phpunit/phpunit": ">=7",
        "friendsofphp/php-cs-fixer": "2.18.3",
        "phpstan/phpstan": "0.12.82"
    },
    "autoload": {
        "psr-4" : {
            "Imi\\Kafka\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "ImiApp\\" : "example/",
            "Imi\\Kafka\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "./tests/phpunit -c ./tests/phpunit.xml"
    },
    "extra": {
        "ide-helper": {
            "list": [
                "redis"
            ]
        }
    }
}
